mixin team-member(name)

	- var member = contents.people[name + '.json']

	img(src='/people/' +member.metadata.photo).fit.rounded1
	h3.regular
		= member.metadata.name
	p.f-small
		= member.metadata.role
		br
		= member.metadata.location
		br
		a(href='http://www.twitter.com/'+member.metadata.twitter).blue3= '@' + member.metadata.twitter