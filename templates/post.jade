extends layout

block append vars
  - bodyclass = 'post-detail'

block prepend title
  | #{ page.title + " - "}


block content

  .py2.white.bg-darkblue2
    include header

  // Splash
    .p-leftedge.py3.pr4.white.bg-darkblue2
      .grid-container.relative.p0.mb3
        img(src=page.metadata.splash).fit.rounded1

  // Content
  .py3.darkblue2.bg-white
    .container
      .clearfix
        .col.col-12.m-col-8.fit-imgs
          h1.semi-bold
            = page.metadata.title
          p.f-large.py3
            = page.metadata.intro
          != typogr(page.html).typogrify()
        .col.m-col-4
      .clearfix
        include author
        h4 About the author
        mixin author(page.metadata.author)

block prepend footer
  include author






//

  block content

    include project-creators
    include project-tools

    h1
      =page.metadata.title
    p
      =page.metadata.intro
      
    mixin project-creators(page.metadata.creators)
    mixin project-tools(page.metadata.tools)
    p.repo
      a(href=page.metadata.source) Source

    include author
    article.article
      section.content!= typogr(page.html).typogrify()
    | By
    .author
      mixin author(page.metadata.author)

  block prepend footer
    include author