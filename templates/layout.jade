doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://code.cdn.mozilla.net/fonts/fira.css')
      link(href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css')
      link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800italic,800' rel='stylesheet' type='text/css')
      link(rel='stylesheet', href='/css/global.css')

  body(class=bodyclass)
    //
      header.header
        div.content-wrap
          block header
            div.logo
              h1
                a(href=locals.url)= locals.name
              p.description= locals.description

    block content
    
    // Footer
    .light.py3.bg-darkblue1
      .container
        .clearfix
          .col.col-8
            a(href='https://www.mozilla.org/en-US/' target='_blank')
              img(src='/images/logo-mozilla-white.svg' alt='Mozilla').w6.mt3.mb2
            p.f-smaller
              a(href='https://www.mozilla.org/en-US/privacy/websites/' target='_blank').pr2.blue1 Privacy Policy
              a(href='https://www.mozilla.org/en-US/about/legal/' target='_blank').pr2.blue1 Legal Notices
              a(href='https://www.mozilla.org/en-US/about/legal/fraud-report/' target='_blank').pr2.blue1 Report Trademark Abuse
            p.f-smaller.blue3
              | Except where otherwise noted, content on this site is licensed under the 
              a(href='http://creativecommons.org/licenses/by-sa/2.5/' target='_blank').blue3 Creative Commons Attribution Share-Alike License v3.0 
              | or any later version. Site built with 
              a(href='http://wintersmith.io/' target='_blank').blue3 Wintersmith
              | .
          .col.col-4

  script(src="/scripts/main.js")
  script(src="/scripts/vendor/three.min.js")
  script(src="/scripts/vendor/VRControls.js")
  script(src="/scripts/vendor/VREffect.js")
  script(src="/scripts/vendor/DeviceOrientationControls.js")
  script(src="/scripts/vendor/StereoEffect.js")
