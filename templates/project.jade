extends layout

block append vars
  - bodyclass = 'project-detail'

block prepend title
  | #{ page.title + " - "}

block content

  include project-creators
  include project-tools

  // Splash
  div.height40.py0.white.bg-darkblue2.relative
    iframe(src=page.metadata.splash, allowfullscreen="true").absolute.full-width.full-height

    .py2.white.bg-darken5.absolute.full-width
      include header

    .absolute.bottom-2.full-width
      .container
        .clearfix
         .col.col-12.m-col-8
            h1.post-title.italic.ultralight.uppercase.mxn3
              span.p2.bg-yellow.black
                = page.metadata.title

  // Content
  .py3.darkblue2.bg-white
    .container
      .clearfix
        .col.col-2
          h5 Creators
          mixin project-creators(page.metadata.creators)
        .col.col-2
          h5 Tools
          mixin project-tools(page.metadata.tools)
      .clearfix
        .col-8
          p.f-large
            =page.metadata.intro
            br
            a(href=page.metadata.source).button.button-green1.mt3.px3
              | GitHub
        .col-4
      .clearfix
        .col-12.fit-imgs
          if page.html
            != typogr(page.html).typogrify()

  include author

  // Author
  //.author.standard-padding
    mixin author(page.metadata.author)

block prepend footer
  include author